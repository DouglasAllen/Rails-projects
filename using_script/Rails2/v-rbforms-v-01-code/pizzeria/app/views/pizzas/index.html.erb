<% title "Search All Pizzas" %>

<% form_tag pizzas_path, :method => :get do %>
  <p>
    <%= label_tag :query, "Search Query" %><br />
    <%= text_field_tag :query, params[:query] %>
  </p>
  <p>
    <%= check_box_tag :house_pizzas, '1', params[:house_pizzas] %>
    <%= label_tag :house_pizzas, "Include House Pizzas" %>
  </p>
  <p>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
